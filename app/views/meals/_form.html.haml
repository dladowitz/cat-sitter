- if @meal.errors.any?
  .form_validation_error
    - @meal.errors.full_messages.each do |msg|
      %li= msg

.row
  .col-lg-12
    = form_for [@event, @meal] do |f|
      = f.label :name
      = f.text_field :name
      = f.label :head_count
      = f.text_field :head_count
      = f.label :start_time
      = f.date_select :start_time #TODO need to change to calendar + time
      = f.submit class: "btn btn-success"
.hr
